generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  username   String?  @unique
  email      String   @unique
  password   String
  avatar     String?
  Post       Post[]
  created_at DateTime @default(now())
}

model Post {
  id        String   @id @default(uuid())
  title     String
  price     Int
  images    String
  address   String
  city      String
  bedroom   Int
  bathroom  Int
  latitude  String
  longitude String
  type      Type
  property  Property
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

enum Type {
  buy
  rent
}

enum Property {
  apartment
  house
  condo
  land
}
